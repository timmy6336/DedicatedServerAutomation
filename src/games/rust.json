    "ports_info": {
        "game_port": {
            "port": 28015,
            "protocol": "UDP",
            "description": "Main game connection port"
        },
        "query_port": {
            "port": 28016,
            "protocol": "UDP", 
            "description": "Steam query port for server browser"
        },
        "rcon_port": {
            "port": 28016,
            "protocol": "TCP",
            "description": "RCON remote console port"
        },
        "app_port": {
            "port": 28082,
            "protocol": "TCP",
            "description": "Rust+ companion app port"
        }
    },
    "server_settings": {
        "hostname": {
            "default": "My Rust Server",
            "description": "Server name displayed in browser"
        },
        "maxplayers": {
            "default": 100,
            "range": [1, 300],
            "description": "Maximum number of players"
        },
        "worldsize": {
            "default": 3000,
            "options": [1000, 2000, 3000, 4000],
            "description": "World generation size"
        },
        "seed": {
            "default": 12345,
            "range": [1, 2147483647],
            "description": "World generation seed"
        },
        "saveinterval": {
            "default": 600,
            "range": [60, 3600],
            "description": "Auto-save interval in seconds"
        },
        "tickrate": {
            "default": 30,
            "options": [20, 30, 60],
            "description": "Server tick rate (affects performance)"
        },
        "stability": {
            "default": true,
            "description": "Enable building stability system"
        },
        "radiation": {
            "default": true,
            "description": "Enable radiation in monuments"
        },
        "pve": {
            "default": false,
            "description": "Enable PvE mode (no player damage)"
        },
        "secure": {
            "default": true,
            "description": "Enable VAC protection"
        }
    },
    "common_issues": [
        {
            "issue": "Server not appearing in browser",
            "solution": "Check port forwarding for 28015-28016 and Steam query port configuration"
        },
        {
            "issue": "High memory usage or crashes",
            "solution": "Rust requires significant RAM, ensure 8GB+ available and consider reducing max players"
        },
        {
            "issue": "Long loading times",
            "solution": "Use SSD storage and ensure good CPU performance for map generation"
        },
        {
            "issue": "Players getting kicked frequently",
            "solution": "Check anti-cheat settings, server performance, and network stability"
        },
        {
            "issue": "Lag or rubber-banding",
            "solution": "Reduce tick rate, lower max players, or upgrade server hardware"
        },
        {
            "issue": "Map generation fails",
            "solution": "Verify world size and seed values, ensure sufficient disk space"
        },
        {
            "issue": "Oxide plugins not loading",
            "solution": "Install latest Oxide framework and check plugin compatibility"
        }
    ],
    "backup_locations": [
        "server/{identity}/",
        "oxide/config/",
        "oxide/data/",
        "cfg/"
